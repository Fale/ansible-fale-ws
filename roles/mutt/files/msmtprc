# Set default values for all following accounts.
defaults
tls on
tls_starttls on
tls_certcheck off
logfile ~/.msmtp.log

# Gmail
account gmail
host smtp.gmail.com
port 587
auth on
user fabiolocati@gmail.com
passwordeval "pass mail/gmail/mutt"
auto_from on
maildomain laptop.fale.io

# Red Hat
account redhat
host smtp.gmail.com
port 587
auth on
user flocati@redhat.com
passwordeval "pass mail/redhat/t460s"
auto_from on
maildomain fale-laptop.redhat.com

# Fale
account fale
host smtp.kolabnow.com
port 587
auth on
user me@fale.io
passwordeval "pass mail/fale/pass"
auto_from on
maildomain laptop.fale.io

# Set a default account
account default : redhat
